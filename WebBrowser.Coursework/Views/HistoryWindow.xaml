<Window x:Class="WebBrowser.Coursework.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер Історії" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Пошук:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchBox" Width="200" Padding="2" TextChanged="SearchBox_TextChanged"/>
            <TextBlock Text="Введіть текст для фільтрації" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
        </StackPanel>

        <DataGrid x:Name="HistoryGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding VisitDate, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" Width="120"/>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Очистити всю історію" Padding="10,5" Background="#FFEBEE" Click="BtnClear_Click"/>
            <Button Content="Закрити" Padding="10,5" Margin="10,0,0,0" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>